{
  "name": "weareus",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "~10.12.0",
    "npm": "~6.4.1"
  },
  "browserslist": [
    "> 2% in NZ",
    "not dead"
  ],
  "scripts": {
    "postinstall": "npm run compile",
    "precommit": "npm run lint && npm test",
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "env-cmd .env --no-override parcel build --detailed-report -d public -o app.js ./client/index.tsx && npm run compile:css",
    "compile:css": "sass ./client/style/screen.scss ./public/screen.css",
    "postcompile:client": "eslint --no-ignore --config public/.eslintrc public/app.js",
    "compile:server": "tsc -p server",
    "build": "npm run compile",
    "lint": "npm run lint:client",
    "lint:client": "tslint -c ./client/tslint.json -p ./client/tsconfig.json",
    "start": "env-cmd .env --no-override if-env NODE_ENV=development && npm run start:dev || npm run start:prod",
    "prestart:dev": "npm run compile:server",
    "start:dev": "concurrently --kill-others \"node server.js\" \"parcel --no-cache -d public -o app.js ./client/index.tsx --log-level 3\"",
    "start:prod": "env-cmd .env --no-override node server.js",
    "test": "npm run test:server",
    "pretest:server": "npm run compile:server",
    "test:server": "NODE_ENV=test jest --no-cache"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "eslint": "^4.19.1",
    "eslint-plugin-compat": "^2.6.3",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.4"
  },
  "dependencies": {
    "@types/classnames": "^2.2.6",
    "@types/convict": "^4.2.0",
    "@types/hapi": "^17.6.3",
    "@types/inert": "^5.1.2",
    "@types/node": "^10.7.2",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/react-router": "^4.4.1",
    "@types/react-router-dom": "^4.3.1",
    "@types/vision": "^5.3.5",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "bootstrap": "^4.1.3",
    "browserslist": "^4.3.4",
    "classnames": "^2.2.6",
    "concurrently": "^3.6.1",
    "contentful": "^6.1.3",
    "convict": "^4.4.0",
    "dotenv-safe": "^6.1.0",
    "env-cmd": "^8.0.2",
    "formik": "^1.3.2",
    "handlebars": "^4.0.12",
    "hapi": "^17.7.0",
    "hapi-auth-auth0": "^0.2.0",
    "if-env": "^1.0.4",
    "inert": "^5.1.2",
    "mailchimp-api-v3": "^1.12.1",
    "marked-ts": "^1.0.0-beta.4",
    "ono": "^4.0.10",
    "parcel-bundler": "^1.10.3",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "pg": "^7.6.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-markdown-renderer": "^1.4.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "reflect-metadata": "^0.1.12",
    "sass": "^1.15.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typeorm": "^0.2.9",
    "typescript": "^3.1.6",
    "vision": "^5.4.3",
    "winston": "^3.1.0",
    "yup": "^0.26.6"
  }
}
