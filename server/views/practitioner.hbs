<div class="container-fluid px-0">
  <div class="pt-5"></div>
  <img
    class="img-fluid w-100 mt-3 border-top-1"
    src="{{practitioner.headerPhotoUrl}}"
  />
</div>
<div class="container mt-2 mb-4">
  <div class="row">
    <div class="col-8 pt-3">
      <div class="text-muted">
        {{#each modalities}}
          <span class="pr-2">{{this}}</span>
        {{/each}}
      </div>
      <h1 class="h1">{{practitioner.title}}</h1>
      <!--
      <div class="text-muted">{{practitioner.contactLocation}}</div>
      -->
      <h3 class="h3 mt-3">{{practitioner.aboutTitle}}</h3>
      <p>
        {{practitioner.aboutText}}
      </p>
      <!--
      <a href="#" class="text-primary font-weight-bold">Read More</a>
      -->
    </div>
    <div class="col-4 mt-2">
      <div class="border rounded shadow p-4">
        <h4>Contact Details</h4>
        <ul class="list-group">
          {{#if practitioner.contactAddress}}
            <li class="list-group-item border-top-0 border-left-0 border-right-0 px-0">
              {{practitioner.contactAddress}}
            </li>
          {{/if}}
          {{#if practitioner.contactPhone}}
            <li class="list-group-item border-0 px-0 font-weight-bold">
              {{practitioner.contactPhone}}
            </li>
          {{/if}}
          {{#if practitioner.contactEmail}}
            <li class="list-group-item border-bottom-0 border-left-0 border-right-0 px-0">
              {{practitioner.contactEmail}}
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </div>
</div>
{{> promo}}
