{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "react",
    "target": "es2017",
    "lib": [
      "dom",
      "es6",
      "scripthost"
    ]
  },
  "include": [
    "../client/**/*.ts",
    "../client/**/*.tsx"
  ],
  "exclude": [
    "../server/**/*.ts",
    "../build/*",
    "**/*.d.ts"
  ]
}
