{
  "name": "weareus",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^10.6.0",
    "npm": "^6.1.0"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "scripts": {
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "env-cmd .env --no-override parcel build --detailed-report -d public -o app.js ./client/index.tsx && sass ./client/style/screen.scss ./public/screen.css",
    "postcompile:client": "eslint --no-ignore --config public/.eslintrc public/app.js",
    "compile:server": "tsc -p server",
    "lint": "npm run lint:client",
    "lint:client": "tslint -c ./client/tslint.json -p ./client/tsconfig.json",
    "start": "env-cmd .env --no-override if-env NODE_ENV=development && npm run start:dev || npm run start:prod",
    "prestart:dev": "npm run compile:server",
    "start:dev": "concurrently --kill-others \"node server.js\" \"parcel --no-cache -d public -o app.js ./client/index.tsx --log-level 3\"",
    "start:prod": "env-cmd .env --no-override node server.js",
    "test": "echo 'no tests ATM'"
  },
  "devDependencies": {
    "@types/hapi": "17.0.15",
    "@types/inert": "5.1.1",
    "@types/node": "10.5.2",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "@types/vision": "5.3.4",
    "babel-plugin-transform-runtime": "6.23.0",
    "bootstrap": "4.1.3",
    "browserslist": "4.0.0",
    "concurrently": "3.6.0",
    "eslint": "4.19.1",
    "eslint-plugin-compat": "2.4.0",
    "parcel-bundler": "1.9.7",
    "parcel-plugin-bundle-visualiser": "1.1.2",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "sass": "1.9.0",
    "tslint": "5.11.0",
    "tslint-react": "3.6.0",
    "typescript": "3.0.1"
  },
  "dependencies": {
    "contentful": "6.1.1",
    "dotenv-safe": "6.0.0",
    "env-cmd": "8.0.2",
    "handlebars": "4.0.11",
    "hapi": "17.5.2",
    "if-env": "1.0.4",
    "inert": "5.1.0",
    "vision": "5.3.3",
    "winston": "3.0.0"
  }
}
