<configuration>
  <system.web>
    <httpRuntime enableVersionHeader="false" />
  </system.web>

  <system.webServer>
    <!-- indicates that the server.js file is a node.js application
    to be handled by the iisnode module -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
      </customHeaders>
    </httpProtocol>

    <httpErrors existingResponse="PassThrough" />

    <rewrite>
      <rules>
        <rule name="HTTP to HTTPS Redirect">
          <match url="(.*)"/>
          <conditions>
            <add input="{SERVER_PORT_SECURE}" pattern="^0$"/>
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent"/>
        </rule>

        <rule name="default">
          <match url="/*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <directoryBrowse enabled="false" />

    <staticContent>
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>

    <!-- "D:\Program Files (x86)\nodejs\8.11.1\node.exe" is the path to `WEBSITE_NODE_DEFAULT_VERSION` in Azure App Services -->
    <iisnode
        loggingEnabled="true"
        debuggingEnabled="true"
        nodeProcessCommandLine="D:\Program Files (x86)\nodejs\8.11.1\node.exe" />
  </system.webServer>
</configuration>
