{
  "root": true,
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "compat"
  ],
  "rules": {
    "compat/compat": "error",
    "complexity": "off",
    "max-statements": "off",
    "no-invalid-this": "off"
  },
  "settings": {
    "polyfills": [
      "fetch",
      "intersectionobserver",
      "promises"
    ]
  }
}
